<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training Area"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="#8000FF"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Lutemon Image -->
        <ImageView
            android:id="@+id/imgLutemon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Lutemon Name -->
        <TextView
            android:id="@+id/txtTrainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name + Color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Stats -->
        <TextView
            android:id="@+id/txtTrainStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stats here"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Training image -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/training_mockup"
            android:layout_marginBottom="8dp" />

        <!-- Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training in progress..."
            android:layout_marginBottom="16dp"
            android:textSize="16sp" />

        <!-- Select Lutemon -->
        <Button
            android:id="@+id/btnTrainSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Train Selected"
            android:backgroundTint="#8000FF"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Train -->
        <Button
            android:id="@+id/btnTrainExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Train Now"
            android:backgroundTint="#8000FF"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Move -->
        <Button
            android:id="@+id/btnMoveHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Move to Home"
            android:backgroundTint="#8000FF"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>


